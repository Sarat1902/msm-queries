
<h1> Director <%=@the_dir.id%> details </h1>
<a href = "/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%=@the_dir.name%></dd>

  <dt>Dob</dt>
  <dd><%=@the_dir.dob%></dd>

  <dt>Bio</dt>
  <dd><%=@the_dir.bio%></dd>

  <dt>Image</dt>
  <dd><image src ="<%=@the_dir.image%>" width = "200"></dd>

  <dt>Created at</dt>
  <dd><%=@the_dir.created_at%></dd>

  <dt>Updated at</dt>
  <dd><%=@the_dir.updated_at%></dd>

</dl>

<hr>

<h2>Filmography</h2>

<% matching_movies = Movie.where({:director_id => @the_dir.id}) %>

<table border = "1">
  <tr>
     <th>ID</th>
     <th>Image</th>
     <th>Title</th>
     <th>Year</th>
     <th>Director</th>
     <th>Show details</th>
  </tr>
 
 

  <% matching_movies.each do |a_movie| %>
    <tr>
     <td> <%= a_movie.id %> </td>
     <td><image src = "<%= a_movie.image %>" width = "50"></td>
     <td> <%= a_movie.title %></td>
     <td> <%= a_movie.year %> </td>
     <td> <%= @the_dir.name %></td>
     <td>
       <a href = "/movies/<%= a_movie.id %>"> Show details </a>
     </td>
   </tr>
  <% end %>
</table>
